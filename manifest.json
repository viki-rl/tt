{
  "manifest_version": 2,
  "name": "Task Manager",
  "description": "A Chrome extension for managing check lists",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html",
    "default_title": "Task Manager"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}